<div class="posts">
    <div>
        <figure class="user_name_bio">
            <img src="<%= @user.photo %>" alt="<%= @user.name %>" />
            <h1><%= @user.name %></h1>
            <p><%= @user.bio %></p>
        </figure>
        <p>Number of posts recorded :<%= @user.posts_counter %></p>
        <%= link_to "Create new post", new_user_post_path(@user)  %>
        <% @posts.each do |post| %>
                <div class="posts-border">
                    <h3><%=post.title %> <span>said :</span> </h3>
                    <p><%=post.text %></p>
                    <p>comment: <%=post.comments_counter %>
                    <p>likes: <%=post.likes_counter %>
                    <% post.recent_comments.each do |comment| %>
                        <p><%=comment.text %></p>
                    <% end %>
                </div>
        <% end %>
    </div>
</div>